<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/splitmainBG"
    android:visibility="gone"
    app:cardBackgroundColor="?attr/windowBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@color/transparent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:visibility="visible"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

             <LinearLayout
                 android:orientation="horizontal"
                 android:id="@+id/splitToolbar"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="-100dp"
                android:layout_marginRight="-100dp"
                android:layout_marginLeft="-100dp"
                android:background="?attr/toolbar">
            </LinearLayout>

            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/closesplithistory"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="1dp"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/backbutton"
                        android:padding="10dp"/>

                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:textColor="@color/purewhite"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:background="@color/transparent"
                            android:id="@+id/upperSplitHistorybtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Upper History"
                            android:fontFamily="@font/play_flair"
                            android:textAllCaps="false"
                            android:maxLines="1"
                            android:ellipsize="end"/>

                        <Button
                            android:textColor="#ADFFFFFF"
                            android:gravity="center"
                            android:ellipsize="end"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:fontFamily="@font/play_flair"
                            android:background="@color/transparent"
                            android:id="@+id/lowerSplitHistoryBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lower History"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/splithistorypopupbtn"
                    android:layout_gravity="center_vertical"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:src="@drawable/threedot_white"
                    android:padding="5dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/transparent"
            android:layout_height="match_parent">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/splitHistoryListEmptyLottieAnim"
                app:lottie_autoPlay="false"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_gravity="center"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/uppersplitlistView"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="visible"
                android:layout_marginRight="10dp"
                android:dividerHeight="7dp"
                android:layout_marginTop="10dp"
                android:divider="@color/transparent"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lowersplitlistView"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:dividerHeight="7dp"
                android:visibility="gone"
                android:divider="@color/transparent"/>
        </LinearLayout>
        </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/splithistorypopuplayout"
        android:visibility="gone"
        android:orientation="vertical"
        android:onClick="poopupClose"
        android:layout_width="match_parent"
        app:cardBackgroundColor="#8e000000"
        android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/splitHistoryActionView"
                android:visibility="gone"
                android:layout_gravity="center|end"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="?attr/cardBackground"
                android:layout_width="100dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/openmainhistoryfromsplit"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="main history"/>

                    <Button
                        android:id="@+id/openfloathistoryfromsplit"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="float history"/>

                    <Button
                        android:id="@+id/clearAllSplitHistory"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clear All"
                        android:textAllCaps="false"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:id="@+id/splitClearLayout"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            app:cardBackgroundColor="?attr/cardBackground"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="10dp"
            tools:ignore="RtlCompat">

            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/darkTextColor"
                    android:text="Clear All"
                    android:textSize="20sp"/>

                <View
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/view_grey"/>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Upper Split History"
                        android:textSize="15sp"
                        android:textColor="?attr/normalTextColor"
                        android:id="@+id/tvUpperSplHisCheck"/>

                    <com.github.lguipeng.library.animcheckbox.AnimCheckBox
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:stroke_color="#bababa"
                        app:circle_color="#000000"
                        android:id="@+id/upperHisChecked"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Lower Split History"
                        android:textSize="15sp"
                        android:textColor="?attr/normalTextColor"
                        android:id="@+id/tvLowerSplHisCheck"/>

                    <com.github.lguipeng.library.animcheckbox.AnimCheckBox
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:stroke_color="#bababa"
                        app:circle_color="#000000"
                        android:id="@+id/lowerHisChecked" />
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="Clear"
                    android:textAllCaps="false"
                    android:background="@drawable/tab_btn"
                    android:layout_margin="5dp"
                    android:id="@+id/splitclearBtn"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>