<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splitAnimVisible"
    app:cardBackgroundColor="@color/transparent">
<androidx.cardview.widget.CardView
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/orientationchanginglayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:background="?attr/windowBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/splitbackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="?attr/cardBackground">

                    <LinearLayout
                        android:id="@+id/upperWebToolbar"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:background="@color/transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:background="@color/transparent">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:background="@color/transparent">

                                <ImageButton
                                    android:id="@+id/upperRefresh"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:background="@color/transparent"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/refresh"
                                    android:visibility="gone" />

                                <ImageButton
                                    android:id="@+id/upperSplitCancelLoading"
                                    android:layout_width="50dp"
                                    android:scaleType="centerCrop"
                                    android:layout_height="40dp"
                                    android:background="@color/transparent"
                                    android:src="@drawable/crossbtn"
                                    android:visibility="visible"
                                    tools:ignore="ContentDescription" />

                                <TextView
                                    android:id="@+id/upperOpenedWebText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:background="@color/transparent"
                                    android:gravity="center|start"
                                    android:maxLines="1"
                                    android:text=""
                                    android:textAllCaps="false"
                                    android:textColor="?attr/normalTextColor" />
                            </LinearLayout>
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/upperProgressBar"
                            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="@color/transparent"
                            android:progress="20" />
                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/visibilityUpperWeb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:visibility="gone">
                        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                            android:id="@+id/upperSwipeRefresh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <im.delight.android.webview.AdvancedWebView
                                android:id="@+id/upperWebView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone"/>
                        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/google_png" />
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:cardBackgroundColor="?attr/cardBackground"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="7dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/upperSearchBarOpener"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:textColor="?attr/darkTextColor"
                                android:layout_weight="0.9"
                                android:text="@string/search_or_type_url" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:id="@+id/upperBottomSheetLayout"
                android:orientation="vertical"
                app:cardBackgroundColor="?attr/cardBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:padding="5dp"
                    android:weightSum="3">

                    <ImageButton
                        android:id="@+id/upperWebBack"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:padding="7dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/disabled_back"
                        android:visibility="visible"
                        tools:ignore="ContentDescription" />

                    <ImageButton
                        android:id="@+id/upperHome"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:padding="7dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/home"
                        tools:ignore="ContentDescription" />

                    <ImageButton
                        android:id="@+id/upperWebNext"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:padding="7dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/web_foeward"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/splitbackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/cardBackground"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lowerWebToolbar"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:background="@color/transparent">

                                <ImageButton
                                    android:id="@+id/lowerSplitRefresh"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:background="@color/transparent"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/refresh"
                                    android:visibility="gone" />

                                <ImageButton
                                    android:id="@+id/lowerSplitCancelLoading"
                                    android:layout_width="50dp"
                                    android:layout_height="40dp"
                                    android:scaleType="centerCrop"
                                    android:background="@color/transparent"
                                    android:src="@drawable/crossbtn"
                                    android:visibility="visible"
                                    tools:ignore="ContentDescription" />

                                <TextView
                                    android:id="@+id/lowerOpenedWebText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:background="@color/transparent"
                                    android:gravity="center|start"
                                    android:maxLines="1"
                                    android:text=""
                                    android:textAllCaps="false"
                                    android:textColor="?attr/normalTextColor" />
                            </LinearLayout>
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/lowerProgressBar"
                            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="@color/transparent"
                            android:progress="20" />
                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/visibilityLowerWeb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:visibility="gone">

                        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                            android:id="@+id/lowerSwipeRefresh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <im.delight.android.webview.AdvancedWebView
                                android:id="@+id/lowerWebView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/google_png" />
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:cardBackgroundColor="?attr/cardBackground"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="7dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lowerSearchBarOpener"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:textColor="?attr/darkTextColor"
                                android:layout_weight="0.9"
                                android:text="@string/search_or_type_url" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:id="@+id/lowerBottomSheetLayout"
                android:orientation="vertical"
                app:cardBackgroundColor="?attr/cardBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:padding="5dp"
                    android:weightSum="3">

                    <ImageButton
                        android:id="@+id/lowerWebBack"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:padding="7dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/disabled_back"
                        android:visibility="visible"
                        tools:ignore="ContentDescription" />

                    <ImageButton
                        android:id="@+id/lowerHome"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:padding="7dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/home"
                        tools:ignore="ContentDescription" />

                    <ImageButton
                        android:id="@+id/lowerWebNext"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:padding="7dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/web_foeward"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="-20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/split_action"
        android:layout_width="70dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/splitmodeMoreActioons"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:padding="5dp"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:background="@color/transparent"
            android:scaleType="centerInside"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/splitmodeActionView"
        android:orientation="vertical"
        android:background="#8e000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="?attr/cardBackground"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:background="@drawable/tab_btn"
                    android:layout_margin="5dp"
                    android:id="@+id/btnchangeorientation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="change orientation"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginBottom="-20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/split_close"
            android:layout_width="70dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/splithidemoreactions"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/bottom_sheet_open"
                android:background="@color/transparent"
                android:scaleType="centerInside"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>