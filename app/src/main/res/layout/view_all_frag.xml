<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/settings_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/saveFragToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        android:background="@color/toolbarcolornews">
    </androidx.appcompat.widget.Toolbar>

    <GridView
        android:id="@+id/savedPagesListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:text="No Saved Pages"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:id="@+id/textNoSavedPages"
        android:layout_gravity="center_horizontal"
        android:paddingTop="48dp"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_height="wrap_content"
        android:text="To save a webpage, choose 'Share' in your web browser, and then choose 'Save For Offline'."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:id="@+id/how_to_text"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"/>

</LinearLayout>