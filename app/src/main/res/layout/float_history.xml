<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/floatMainBG"
    android:visibility="gone"
    app:cardBackgroundColor="?attr/windowBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:visibility="visible"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/floatToolbar"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="-100dp"
                android:layout_marginRight="-100dp"
                android:layout_marginLeft="-100dp"
                android:background="?attr/toolbar">
            </LinearLayout>

            <ImageView
                android:id="@+id/closeFloatHistory"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="1dp"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/backbutton"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Float History"
                android:textSize="25sp"
                android:fontFamily="@font/play_flair"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/purewhite"/>

            <ImageView
                android:id="@+id/floatHistoryPopup"
                android:layout_gravity="center_vertical|end"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/threedot_white"
                android:padding="5dp"/>
        </androidx.cardview.widget.CardView>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/floatHistoryListEmptyLottieAnim"
            app:lottie_autoPlay="false"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_gravity="center"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/floatlistView"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:dividerHeight="7dp"
            android:divider="@color/transparent"/>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/floathistorypopuplayout"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#8e000000"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/floatHistoryActionView"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="?attr/cardBackground"
                android:layout_width="100dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/openmainhistoryfromfloat"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="main history"/>

                    <Button
                        android:id="@+id/opensplithistoryfromfloat"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="split history"/>

                    <Button
                        android:id="@+id/clearAllFloatHistory"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clear All"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>