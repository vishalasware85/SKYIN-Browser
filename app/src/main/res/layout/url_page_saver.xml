<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#F1F1F1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Web-Page Saver"
                android:textSize="16sp"
                android:fontFamily="@font/playflair"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/purewhite"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">
                <EditText
                    android:id="@+id/savePageURL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Paste the website URL"
                    android:textColor="@color/black"
                    android:background="@color/transparent"
                    android:layout_margin="10dp"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:layout_width="150dp"
                    android:layout_gravity="center"
                    android:background="@drawable/tab_btn"
                    android:layout_height="wrap_content"
                    android:text="fetch"
                    android:layout_margin="10dp"
                    android:id="@+id/saveFetchBtn"/>

                <Button
                    android:layout_width="150dp"
                    android:layout_gravity="center"
                    android:background="@drawable/tab_btn"
                    android:layout_height="wrap_content"
                    android:text="Paste"
                    android:layout_margin="10dp"
                    android:id="@+id/pasteSaveBtn"/>
            </LinearLayout>

            <Button
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:background="@drawable/tab_btn"
                android:layout_height="wrap_content"
                android:text="View saved"
                android:layout_margin="10dp"
                android:id="@+id/viewSavedBtn"/>
        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/pageSavedLayout"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="0.1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Page saved"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:fontFamily="monospace"/>

            <TextView
                android:id="@+id/viewTxt"
                android:layout_weight="0.3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="view"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:textColor="#2196F3"
                android:fontFamily="monospace"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>