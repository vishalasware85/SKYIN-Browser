<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="?attr/windowBackground"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    android:id="@+id/enterviewHindiNews"
    xmlns:tl="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/newsDetailScroll"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardElevation="0dp"
                app:cardCornerRadius="30dp">
                <ProgressBar
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:id="@+id/newsBigImageProgress"/>
                <ImageView
                    android:id="@+id/contentImage"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="298dp"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    app:cardBackgroundColor="?attr/cardBackground"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/sourceImage"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/sourceTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Loading..."
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textColor="?attr/darkTextColor"
                    android:paddingStart="20dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/newsTitle"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Loading..."
                android:textColor="?attr/normalTextColor"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/newsDetail"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Loading..."
                android:textColor="?attr/normalTextColor"
                android:textSize="14sp"
                android:gravity="center_vertical"/>

            <EditText
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="?attr/darkTextColor"
                android:id="@+id/newsUrl"/>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/newsToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <View
                android:id="@+id/newsTitleShadow"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:background="?attr/newsShadowColor"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/newsTitleBar"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                app:cardBackgroundColor="?attr/cardBackground"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="18dp"
                android:layout_marginLeft="18dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp">

                <ProgressBar
                    android:id="@+id/newsProgressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleY="15"
                    android:alpha="0.4"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_weight="0.5"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleColor="?attr/rippleColor"
                            app:mrl_rippleAlpha="0.2"
                            app:mrl_rippleDelayClick="false"
                            app:mrl_rippleHover="true"
                            app:mrl_rippleRoundedCorners="40dp"
                            android:layout_marginStart="10dp">
                        <ImageView
                            android:id="@+id/hindiNewsBack"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/shape"/>
                        </com.balysv.materialripple.MaterialRippleLayout>

                        <LinearLayout
                            android:gravity="start"
                            android:paddingStart="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@color/transparent"
                                android:text="SKYIN News"
                                android:textSize="17sp"
                                android:textColor="?attr/darkTextColor"/>
                        </LinearLayout>
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:id="@+id/bookmarkNews"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleColor="?attr/rippleColor"
                            app:mrl_rippleAlpha="0.2"
                            app:mrl_rippleDelayClick="false"
                            app:mrl_rippleHover="true"
                            app:mrl_rippleRoundedCorners="40dp"
                            android:layout_weight="1">
                            <ImageView
                                android:padding="7dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerInside"
                                android:src="@drawable/bookmark1"/>
                        </com.balysv.materialripple.MaterialRippleLayout>

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/newsMenuButton"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleColor="?attr/rippleColor"
                            app:mrl_rippleAlpha="0.2"
                            app:mrl_rippleDelayClick="false"
                            app:mrl_rippleHover="true"
                            app:mrl_rippleRoundedCorners="40dp"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerInside"
                                android:src="?attr/newsDetailMenu"/>
                        </com.balysv.materialripple.MaterialRippleLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/newsWebViewSwipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <im.delight.android.webview.AdvancedWebView
                android:id="@+id/newsWebView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </im.delight.android.webview.AdvancedWebView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/newsMenuPopup"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#8e000000"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:visibility="gone"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="70dp"
            app:cardBackgroundColor="?attr/cardBackground"
            android:layout_width="match_parent"
            android:id="@+id/mainPopupActionViewNews"
            android:layout_height="wrap_content"
            app:cardElevation="10dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationViewNews"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                android:visibility="invisible"/>

            <LinearLayout
                android:id="@+id/swipeUpAnimGoneNews"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#4ECBCBCB"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/openInBrowserNews"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleColor="?attr/rippleColor"
                        app:mrl_rippleAlpha="0.2"
                        app:mrl_rippleDelayClick="false"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleRoundedCorners="10dp"
                        app:mrl_rippleDuration="100">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/backbutton"
                                android:rotation="90"
                                android:layout_margin="5dp"/>

                            <TextView
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:layout_gravity="center_vertical"
                                android:textColor="?attr/normalTextColor"
                                android:text="Open in Browser"/>
                        </LinearLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#4ECBCBCB"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/shareNews"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleColor="?attr/rippleColor"
                        app:mrl_rippleAlpha="0.2"
                        app:mrl_rippleDelayClick="false"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleRoundedCorners="10dp"
                        app:mrl_rippleDuration="100">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/share1"
                                android:layout_margin="5dp"/>

                            <TextView
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:layout_gravity="center_vertical"
                                android:textColor="?attr/normalTextColor"
                                android:text="Share"/>
                        </LinearLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#4ECBCBCB"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/myNewsBookmarks"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleColor="?attr/rippleColor"
                        app:mrl_rippleAlpha="0.2"
                        app:mrl_rippleDelayClick="false"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleRoundedCorners="10dp"
                        app:mrl_rippleDuration="100">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/bookmark1"
                                android:layout_margin="5dp"/>

                            <TextView
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:layout_gravity="center_vertical"
                                android:textColor="?attr/normalTextColor"
                                android:text="My Bookmarks"/>
                        </LinearLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#4ECBCBCB"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/newsDetailAdBlock"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleColor="?attr/rippleColor"
                        app:mrl_rippleAlpha="0.2"
                        app:mrl_rippleDelayClick="false"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleRoundedCorners="10dp"
                        app:mrl_rippleDuration="100">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ad_blocker"
                                android:layout_margin="5dp"/>

                            <TextView
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:layout_gravity="center_vertical"
                                android:textColor="?attr/normalTextColor"
                                android:layout_weight="1"
                                android:text="AD Block"/>

                            <com.suke.widget.SwitchButton
                                android:id="@+id/adBlockNewsDetailSwitch"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|center_vertical"
                                app:sb_checked_color="@color/purpleStatusBar"
                                app:sb_checked="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"/>
                        </LinearLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>