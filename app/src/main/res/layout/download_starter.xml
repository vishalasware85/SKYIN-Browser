<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/Theme.AppCompat.Translucent11"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_gravity="bottom"
        android:visibility="visible"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="20dp"
                android:id="@+id/typeOfImage"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal"
                android:layout_width="100dp"
                android:layout_height="100dp" />

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="?attr/cardBackground"
            android:id="@+id/fullCardView"
            android:visibility="invisible"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/starterText1"
                    android:textColor="?attr/darkTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:text="Type of File"/>

                    <LinearLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/dotExtension"
                            android:textColor="?attr/darkTextColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/starterText2"
                            android:textColor="?attr/darkTextColor"
                            android:layout_height="wrap_content"
                            android:text=" = "/>

                        <TextView
                            android:id="@+id/extensionFull"
                            android:textColor="?attr/darkTextColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                    </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/starterText3"
                    android:textColor="?attr/normalTextColor"
                    android:layout_height="match_parent"
                    android:text="Name : "
                    android:textSize="20sp"/>

                <HorizontalScrollView
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <EditText
                    android:id="@+id/filename"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:textColor="?attr/darkTextColor"
                    android:textColorHint="?attr/darkTextColor"
                    android:background="@color/transparent"/>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/starterText4"
                    android:textColor="?attr/normalTextColor"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:text="url : "/>

                <HorizontalScrollView
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                    android:id="@+id/fileurl"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="?attr/darkTextColor"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:text=""/>
                </HorizontalScrollView>
            </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/normalTextColor"
                        android:maxLines="1"
                        android:textSize="18sp"
                        android:text="Size : "/>

                    <HorizontalScrollView
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/fileSize"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="?attr/darkTextColor"
                            android:textSize="20sp"
                            android:maxLines="1"
                            android:text=""/>
                    </HorizontalScrollView>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="?attr/normalTextColor"
                    android:id="@+id/starterText5"
                    android:text="Save To : "
                    android:textSize="20sp"/>

                    <HorizontalScrollView
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                        android:textSize="16sp"
                        android:id="@+id/starterText6"
                        android:gravity="center_vertical"
                        android:textColor="?attr/darkTextColor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:text="SKY!N Browser/Downloads"/>
                    </HorizontalScrollView>
                </LinearLayout>

                <Button
                    android:id="@+id/startDownload"
                    android:background="?attr/feedbackButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Download"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textColor="@color/purewhite"
                    android:layout_margin="15dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>