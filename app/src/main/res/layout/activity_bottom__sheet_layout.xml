<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/btsheetBackgroungInco"
    style="@style/Theme.AppCompat.Translucent11"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="#41000000"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/shareLayoutBTSHEET"
        android:visibility="gone"
        app:cardBackgroundColor="?attr/windowBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doNothing"
        app:cardElevation="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="?attr/normalTextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share Your SK!yn"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_grey"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/appUrl"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="?attr/darkTextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="my app url"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/copyurlBtn"
                    android:text="Copy URL"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:textColor="?attr/normalTextColor"
                    android:layout_margin="5dp"
                    android:background="@drawable/tab_btn"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/directShareBtn"
                    android:textColor="?attr/normalTextColor"
                    android:text="Direct Share"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:background="@drawable/tab_btn"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/incoSwitchLayout"
        android:layout_gravity="top"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/windowBackground"
        app:cardCornerRadius="10dp"
        android:visibility="gone"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/switchbtn_inco"
                android:textSize="20sp"
                android:textColor="?attr/normalTextColor"
                android:id="@+id/btSheettxt14"
                android:gravity="center"
                android:fontFamily="@font/playflair"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="0.9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Main Browser"
                    android:id="@+id/btSheettxt15"
                    android:textColor="?attr/darkTextColor"
                    android:textSize="14sp"
                    android:gravity="center_vertical"/>

                <com.suke.widget.SwitchButton
                    android:id="@+id/mainwebInco"
                    android:layout_marginTop="10dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="0.9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Float Browser"
                    android:id="@+id/btSheettxt16"
                    android:textColor="?attr/darkTextColor"
                    android:textSize="14sp"
                    android:gravity="center_vertical"/>

                <com.suke.widget.SwitchButton
                    android:id="@+id/floatwebInco"
                    android:layout_marginTop="10dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="0.9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Split Browser"
                    android:textColor="?attr/darkTextColor"
                    android:id="@+id/btSheettxt17"
                    android:textSize="14sp"
                    android:gravity="center_vertical"/>

                <com.suke.widget.SwitchButton
                    android:id="@+id/splitwebInco"
                    android:layout_marginTop="10dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/bottomsheet"
            android:visibility="invisible"
            android:background="@color/transparent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/moreBtLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="?attr/windowBackground"
                app:cardCornerRadius="10dp"
                android:visibility="invisible"
                app:cardElevation="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleColor="?attr/rippleColor"
                            android:id="@+id/feedback"
                            app:mrl_rippleAlpha="0.2"
                            app:mrl_rippleDelayClick="false"
                            app:mrl_rippleHover="true"
                            app:mrl_rippleRoundedCorners="10dp"
                            app:mrl_rippleDuration="100"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/transparent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_weight="1"
                                    android:background="@color/transparent"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/feedback" />

                                <TextView
                                    android:id="@+id/btSheettxt1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:maxLines="1"
                                    android:text="Feedback"
                                    android:textColor="?attr/darkTextColor" />
                            </LinearLayout>
                        </com.balysv.materialripple.MaterialRippleLayout>

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleColor="?attr/rippleColor"
                            app:mrl_rippleAlpha="0.2"
                            app:mrl_rippleDelayClick="false"
                            app:mrl_rippleHover="true"
                            android:id="@+id/splitmode"
                            app:mrl_rippleRoundedCorners="10dp"
                            app:mrl_rippleDuration="100"
                            android:layout_weight="1">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:scaleType="centerInside"
                                    android:background="@color/transparent"
                                    app:srcCompat="@drawable/split"
                                    android:transitionName="splittransition"/>
                                <TextView
                                    android:textColor="?attr/darkTextColor"
                                    android:maxLines="1"
                                    android:layout_gravity="center"
                                    android:textSize="12sp"
                                    android:id="@+id/btSheettxt10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Split Mode"/>
                            </LinearLayout>
                        </com.balysv.materialripple.MaterialRippleLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/share"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@color/transparent"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/share"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:id="@+id/btSheettxt2"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:text="Share"
                                android:textColor="?attr/darkTextColor" />
                        </LinearLayout>

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleColor="?attr/rippleColor"
                            android:id="@+id/about"
                            app:mrl_rippleAlpha="0.2"
                            app:mrl_rippleDelayClick="false"
                            app:mrl_rippleHover="true"
                            app:mrl_rippleRoundedCorners="10dp"
                            app:mrl_rippleDuration="100"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:background="@color/transparent"
                                    android:layout_weight="1"
                                    android:scaleType="centerInside"
                                    app:srcCompat="@drawable/about"
                                    android:padding="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:id="@+id/btSheettxt3"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:maxLines="1"
                                    android:text="About"
                                    android:textColor="?attr/darkTextColor" />
                            </LinearLayout>
                        </com.balysv.materialripple.MaterialRippleLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="10dp">

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/transparent"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/logo_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/transparent"
                            android:maxLines="1"
                            android:id="@+id/btSheettxt4"
                            android:text="Floating Mode"
                            android:textColor="?attr/darkTextColor"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:layout_weight="1"/>

                        <com.suke.widget.SwitchButton
                            android:id="@+id/floatSwitchBT"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            app:sb_checked_color="@color/purpleStatusBar"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:id="@+id/btmainCard"
                app:cardBackgroundColor="?attr/windowBackground"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp">

                <LinearLayout
                    android:background="@color/transparent"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="@color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:orientation="horizontal">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleColor="?attr/rippleColor"
                            android:id="@+id/history"
                            app:mrl_rippleAlpha="0.2"
                            app:mrl_rippleDelayClick="false"
                            app:mrl_rippleHover="true"
                            app:mrl_rippleRoundedCorners="10dp"
                            app:mrl_rippleDuration="100"
                            android:layout_weight="1">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:scaleType="centerInside"
                                    android:layout_weight="1"
                                    android:background="@color/transparent"
                                    app:srcCompat="@drawable/history" />

                                <TextView
                                    android:textColor="?attr/darkTextColor"
                                    android:maxLines="1"
                                    android:id="@+id/btSheettxt5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="History"
                                    android:layout_gravity="center"/>
                            </LinearLayout>
                        </com.balysv.materialripple.MaterialRippleLayout>

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleColor="?attr/rippleColor"
                            android:id="@+id/bookmarks"
                            app:mrl_rippleAlpha="0.2"
                            app:mrl_rippleDelayClick="false"
                            app:mrl_rippleHover="true"
                            app:mrl_rippleRoundedCorners="10dp"
                            app:mrl_rippleDuration="100"
                            android:layout_weight="1">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView

                                    android:layout_width="50dp"
                                    android:background="@color/transparent"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:scaleType="centerInside"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/bookmarks" />
                                <TextView
                                    android:textColor="?attr/darkTextColor"
                                    android:maxLines="1"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:id="@+id/btSheettxt6"
                                    android:layout_height="wrap_content"
                                    android:text="Book-Marks"/>
                            </LinearLayout>
                        </com.balysv.materialripple.MaterialRippleLayout>

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleColor="?attr/rippleColor"
                            app:mrl_rippleAlpha="0.2"
                            android:id="@+id/download"
                            app:mrl_rippleDelayClick="false"
                            app:mrl_rippleHover="true"
                            app:mrl_rippleRoundedCorners="10dp"
                            app:mrl_rippleDuration="100"
                            android:layout_weight="1">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:background="@color/transparent"
                                    android:layout_weight="1"
                                    android:scaleType="fitCenter"
                                    android:layout_gravity="center"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    app:srcCompat="@drawable/download" />

                                <TextView
                                    android:textColor="?attr/darkTextColor"
                                    android:maxLines="1"
                                    android:id="@+id/btSheettxt7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Downloads"
                                    android:layout_gravity="center"/>
                            </LinearLayout>
                        </com.balysv.materialripple.MaterialRippleLayout>


                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleColor="?attr/rippleColor"
                            app:mrl_rippleAlpha="0.2"
                            app:mrl_rippleDelayClick="false"
                            app:mrl_rippleHover="true"
                            android:id="@+id/incognito"
                            app:mrl_rippleRoundedCorners="10dp"
                            app:mrl_rippleDuration="100"
                            android:layout_weight="1">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:scaleType="centerCrop"
                                    android:scaleY="1.3"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@color/transparent"
                                    android:src="@drawable/incognito"/>

                                <TextView
                                    android:textColor="?attr/darkTextColor"
                                    android:id="@+id/btSheettxt8"
                                    android:maxLines="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Incognito"
                                    android:layout_gravity="center"/>
                            </LinearLayout>
                        </com.balysv.materialripple.MaterialRippleLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleColor="?attr/rippleColor"
                            app:mrl_rippleAlpha="0.2"
                            app:mrl_rippleDelayClick="false"
                            app:mrl_rippleHover="true"
                            android:id="@+id/settings"
                            app:mrl_rippleRoundedCorners="10dp"
                            app:mrl_rippleDuration="100"
                            android:layout_weight="1">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_gravity="center"
                                    android:scaleType="centerInside"
                                    android:layout_height="50dp"
                                    android:layout_weight="1"
                                    android:background="@color/transparent"
                                    app:srcCompat="@drawable/settings" />

                                <TextView
                                    android:textColor="?attr/darkTextColor"
                                    android:maxLines="1"
                                    android:layout_gravity="center"
                                    android:id="@+id/btSheettxt9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Settings"/>

                            </LinearLayout>
                        </com.balysv.materialripple.MaterialRippleLayout>




                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleColor="?attr/rippleColor"
                            app:mrl_rippleAlpha="0.2"
                            app:mrl_rippleDelayClick="false"
                            app:mrl_rippleHover="true"
                            android:id="@+id/vpnBTSheet"
                            app:mrl_rippleRoundedCorners="10dp"
                            app:mrl_rippleDuration="100"
                            android:layout_weight="1">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:scaleType="centerInside"
                                    android:background="@color/transparent"
                                    app:srcCompat="@drawable/vpn_logo"
                                    android:transitionName="splittransition"/>
                                <TextView
                                    android:textColor="?attr/darkTextColor"
                                    android:maxLines="1"
                                    android:layout_gravity="center"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SKY!N VPN"/>
                            </LinearLayout>
                        </com.balysv.materialripple.MaterialRippleLayout>


                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleColor="?attr/rippleColor"
                            app:mrl_rippleAlpha="0.2"
                            app:mrl_rippleDelayClick="false"
                            app:mrl_rippleHover="true"
                            app:mrl_rippleRoundedCorners="10dp"
                            android:id="@+id/desktopMode"
                            app:mrl_rippleDuration="100"
                            android:layout_weight="1"
                            android:visibility="gone">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:layout_weight="1"
                                    android:background="@color/transparent"
                                    app:srcCompat="@drawable/desktoop_modde"
                                    android:scaleType="centerInside"/>
                                <TextView
                                    android:textColor="?attr/darkTextColor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/btSheettxt11"
                                    android:textSize="10sp"
                                    android:text="Desktop Site"
                                    android:layout_gravity="center"/>
                            </LinearLayout>
                        </com.balysv.materialripple.MaterialRippleLayout>

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleColor="?attr/rippleColor"
                            android:id="@+id/addons"
                            app:mrl_rippleAlpha="0.2"
                            app:mrl_rippleDelayClick="false"
                            app:mrl_rippleHover="true"
                            app:mrl_rippleRoundedCorners="10dp"
                            app:mrl_rippleDuration="100"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/transparent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="50dp"
                                    android:background="@color/transparent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:scaleType="centerInside"
                                    app:srcCompat="@drawable/addonos"
                                    android:padding="8dp"/>

                                <TextView
                                    android:id="@+id/btSheettxt13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:maxLines="1"
                                    android:text="Addons"
                                    android:textColor="?attr/darkTextColor"/>
                            </LinearLayout>
                        </com.balysv.materialripple.MaterialRippleLayout>

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/morebtsheet"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleColor="?attr/rippleColor"
                            app:mrl_rippleAlpha="0.2"
                            app:mrl_rippleDelayClick="false"
                            app:mrl_rippleHover="true"
                            app:mrl_rippleRoundedCorners="10dp"
                            app:mrl_rippleDuration="100"
                            android:layout_weight="1">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:scaleType="centerInside"
                                    android:layout_weight="1"
                                    android:background="@color/transparent"
                                    app:srcCompat="@drawable/three_dot_btn" />

                                <TextView
                                    android:textColor="?attr/darkTextColor"
                                    android:maxLines="1"
                                    android:layout_width="wrap_content"
                                    android:id="@+id/btSheettxt12"
                                    android:layout_height="wrap_content"
                                    android:text="More"
                                    android:layout_gravity="center"/>
                            </LinearLayout>
                        </com.balysv.materialripple.MaterialRippleLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp"
            android:layout_gravity="bottom"
            android:id="@+id/btSheetArrow"
            app:cardBackgroundColor="?attr/windowBackground"
            android:orientation="vertical">

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleColor="?attr/rippleColor"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleHover="true"
                app:mrl_rippleRoundedCorners="5dp"
                app:mrl_rippleDuration="100"
                android:layout_weight="1">
            <ImageButton
                android:id="@+id/close"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:layout_gravity="center_horizontal"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"/>
            </com.balysv.materialripple.MaterialRippleLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ImageView
        android:id="@+id/openNingImageFromBtSheet"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_marginBottom="120dp"
        android:paddingTop="300dp"/>

</androidx.cardview.widget.CardView>