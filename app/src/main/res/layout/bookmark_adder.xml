<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".bookmark.BookmarkAdderAndEdit">

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:id="@+id/upper_bookmark_addr"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="3dp"
            app:cardBackgroundColor="?attr/cardBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/main_title"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add To Bookmarks"
            android:gravity="center_horizontal"
            android:textColor="?attr/normalTextColor"
            android:textSize="25sp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:id="@+id/lower_bookmark_addr"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="?attr/cardBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="?attr/normalTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title of Your Bookmark!"
                    android:textSize="19sp"/>
                <EditText
                    android:id="@+id/bookmark_title"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:hint="Add Here Title"
                    android:textColorHint="?attr/darkTextColor"
                    android:textColor="?attr/normalTextColor"
                    android:background="@color/transparent"/>

                <View
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/view_grey"/>

                <TextView
                    android:textColor="?attr/normalTextColor"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="URL of a Website!"
                    android:textSize="19sp"/>

                <EditText
                    android:padding="5dp"
                    android:textColor="?attr/normalTextColor"
                    android:textColorHint="?attr/darkTextColor"
                    android:id="@+id/bookmark_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="Add here URL"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:id="@+id/addbookmark"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Add"
            android:background="?attr/tabBtnCard"
            android:textColor="?attr/normalTextColor"
            android:textSize="15sp"/>

            <Button
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:id="@+id/update_bookmark"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="Update"
                android:background="?attr/tabBtnCard"
                android:textColor="?attr/normalTextColor"
                android:textSize="15sp"/>
    </LinearLayout>

</LinearLayout>