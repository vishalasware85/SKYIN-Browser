<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:visibility="gone"
    android:id="@+id/mainPopupLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#8e000000"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_gravity="start|center"
        android:layout_margin="10dp"
        android:visibility="gone"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="?attr/cardBackground"
        android:layout_width="100dp"
        android:id="@+id/mainPopupActionView"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#4ECBCBCB"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/refreshBtn"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleColor="?attr/rippleColor"
                        app:mrl_rippleAlpha="0.2"
                        app:mrl_rippleDelayClick="false"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleRoundedCorners="10dp"
                        app:mrl_rippleDuration="100">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/refresh"/>

                            <TextView
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:textColor="?attr/normalTextColor"
                                android:text="Refresh"/>
                        </LinearLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#4ECBCBCB"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleColor="?attr/rippleColor"
                        app:mrl_rippleAlpha="0.2"
                        app:mrl_rippleDelayClick="false"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleRoundedCorners="10dp"
                        app:mrl_rippleDuration="100"
                        android:id="@+id/addto">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/add_to"/>

                            <TextView
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:textColor="?attr/normalTextColor"
                                android:text="Add to"/>
                        </LinearLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#4ECBCBCB"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/openFloat"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleColor="?attr/rippleColor"
                        app:mrl_rippleAlpha="0.2"
                        app:mrl_rippleDelayClick="false"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleRoundedCorners="10dp"
                        app:mrl_rippleDuration="100">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/logo_icon"
                                android:layout_margin="5dp"/>

                            <TextView
                                android:gravity="center"
                                android:layout_margin="5dp"
                                android:textColor="?attr/normalTextColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:text="Floating Mode"/>
                        </LinearLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#4ECBCBCB"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/desktopMode"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleColor="?attr/rippleColor"
                        app:mrl_rippleAlpha="0.2"
                        app:mrl_rippleDelayClick="false"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleRoundedCorners="10dp"
                        app:mrl_rippleDuration="100">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/desktoop_modde"
                                android:layout_margin="5dp"/>
                            <TextView
                                android:gravity="center"
                                android:layout_margin="5dp"
                                android:textColor="?attr/normalTextColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:text="Desktop Mode"/>
                        </LinearLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#4ECBCBCB"
                    app:cardElevation="0dp"
                    android:visibility="gone"
                    app:cardCornerRadius="10dp">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/save_page"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleColor="?attr/rippleColor"
                        app:mrl_rippleAlpha="0.2"
                        app:mrl_rippleDelayClick="false"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleRoundedCorners="10dp"
                        app:mrl_rippleDuration="100">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/save_page"
                                android:layout_margin="5dp"/>
                            <TextView
                                android:gravity="center"
                                android:layout_margin="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:text="Save Page"/>
                        </LinearLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/desktoplayout"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="0dp"
        android:layout_width="wrap_content"
        android:onClick="doNothing"
        android:visibility="gone"
        app:cardBackgroundColor="?attr/cardBackground"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:textColor="?attr/normalTextColor"
                android:text="Desktop Mode"/>

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvdmtOn"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textColor="?attr/normalTextColor"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Turn on"/>

                <com.github.lguipeng.library.animcheckbox.AnimCheckBox
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:stroke_color="#bababa"
                    android:id="@+id/dmton"
                    app:circle_color="#000000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvdmtoff"
                    android:layout_weight="1"
                    android:textColor="?attr/normalTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Turn off"/>

                <com.github.lguipeng.library.animcheckbox.AnimCheckBox
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:stroke_color="#bababa"
                    app:circle_color="#000000"
                    android:id="@+id/dmtoff"
                    app:checked="true"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/desktopalertlayout"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="0dp"
        android:layout_width="wrap_content"
        android:onClick="doNothing"
        android:layout_marginTop="150dp"
        android:visibility="gone"
        app:cardBackgroundColor="?attr/cardBackground"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="150dp"
                android:textColor="?attr/normalTextColor"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="@string/desktopalert"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/floatingLayout"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="0dp"
        android:layout_width="wrap_content"
        android:onClick="doNothing"
        android:visibility="gone"
        app:cardBackgroundColor="?attr/cardBackground"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:textColor="?attr/normalTextColor"
                android:layout_height="wrap_content"
                android:text="Floating Mode"/>

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.suke.widget.SwitchButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:sb_checked_color="@color/purpleStatusBar"
                    android:id="@+id/enablefloatmode"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Turned Off"
                android:textColor="?attr/normalTextColor"
                android:id="@+id/tvfloatState"
                android:gravity="center"
                android:textSize="15sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/addToLayout"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="0dp"
        android:layout_width="wrap_content"
        android:onClick="doNothing"
        android:visibility="gone"
        app:cardBackgroundColor="?attr/cardBackground"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:textColor="?attr/normalTextColor"
                android:layout_height="wrap_content"
                android:text="Add to"
                android:gravity="center_horizontal"/>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleColor="?attr/rippleColor"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleHover="true"
                app:mrl_rippleRoundedCorners="20dp"
                app:mrl_rippleDuration="100"
                android:id="@+id/mySitesAdder">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="?attr/normalTextColor"
                    android:text="My-Sites"
                    android:fontFamily="serif-monospace"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp" />
            </com.balysv.materialripple.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_grey"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleColor="?attr/rippleColor"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleHover="true"
                app:mrl_rippleRoundedCorners="20dp"
                app:mrl_rippleDuration="100"
                android:id="@+id/bookmarksAdder">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Bookmarks"
                    android:textColor="?attr/normalTextColor"
                    android:textSize="18sp"
                    android:fontFamily="serif-monospace"
                    android:textStyle="bold"
                    android:layout_margin="5dp"/>
            </com.balysv.materialripple.MaterialRippleLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>