<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_marginTop="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/transparent"
        android:id="@+id/mpageCard2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/refreshnews"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:fontFamily="@font/play_flair"
                android:textColor="?attr/normalTextColor"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:text="Refresh"
                android:background="?attr/newsBtnBg"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/moreNews"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:fontFamily="@font/play_flair"
                android:textAllCaps="false"
                android:gravity="center"
                android:textColor="?attr/normalTextColor"
                android:text="More"
                android:background="?attr/newsBtnBg"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/changeLanguageMpage"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:fontFamily="@font/play_flair"
                android:textColor="?attr/normalTextColor"
                android:textAllCaps="false"
                android:text="Language"
                android:layout_weight="1"
                android:background="?attr/newsBtnBg"/>
        </LinearLayout>
    </LinearLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        shimmer:duration="800"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/news_simmer"/>
            <include layout="@layout/news_simmer"/>
            <include layout="@layout/news_simmer"/>
            <include layout="@layout/news_simmer" />
            <include layout="@layout/news_simmer"/>
            <include layout="@layout/news_simmer"/>
            <include layout="@layout/news_simmer"/>
            <include layout="@layout/news_simmer"/>
            <include layout="@layout/news_simmer"/>
            <include layout="@layout/news_simmer"/>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.skyinbrowser.CustomJavaFiles.NonScrollListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/hindiNewsList"
                android:divider="@color/transparent"
                android:dividerHeight="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:scrollbars="none"
                android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:id="@+id/recyclerView"
                android:scrollbars="none"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/newsretry_layout"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opps! NO Internet Connection....."
            android:textColor="?attr/darkTextColor"
            android:textSize="30sp"/>

        <ImageView
            android:id="@+id/newsretry_button"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/refresh"/>

        <TextView
            android:layout_marginTop="-20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/darkTextColor"
            android:text="Tap to retry...."
            android:textSize="30sp"/>
    </LinearLayout>
        </LinearLayout>
</LinearLayout>
