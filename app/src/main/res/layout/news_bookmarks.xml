<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="?attr/windowBackground">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/newsBookmarkScroll"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="110dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/newsBookmarkListEmptyLottieAnim"
                app:lottie_autoPlay="false"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_gravity="center"/>

            <com.skyinbrowser.CustomJavaFiles.NonScrollListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/newsBookmarkListView"
                android:divider="@color/transparent"
                android:dividerHeight="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:scrollbars="none"
                android:visibility="visible"/>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/newsBookmarkToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <View
                android:id="@+id/newsTitleShadow"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:background="?attr/newsShadowColor"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/newsTitleBar"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                app:cardBackgroundColor="?attr/cardBackground"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="18dp"
                android:layout_marginLeft="18dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_weight="0.2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleColor="?attr/rippleColor"
                            app:mrl_rippleAlpha="0.2"
                            app:mrl_rippleDelayClick="false"
                            app:mrl_rippleHover="true"
                            app:mrl_rippleRoundedCorners="40dp"
                            android:layout_marginStart="10dp">
                        <ImageView
                            android:id="@+id/newsBookmarkBack"
                            android:layout_width="30dp"
                            android:layout_gravity="center"
                            android:layout_height="match_parent"
                            android:src="@drawable/shape"/>
                        </com.balysv.materialripple.MaterialRippleLayout>

                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@color/transparent"
                                android:text="Bookmarked News"
                                android:textSize="17sp"
                                android:textColor="?attr/darkTextColor"/>
                        </LinearLayout>
                    </LinearLayout>

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleColor="?attr/rippleColor"
                        app:mrl_rippleAlpha="0.2"
                        app:mrl_rippleDelayClick="false"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleRoundedCorners="40dp"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/newsBookmarkMenuBtn"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:src="?attr/newsDetailMenu"/>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/newsMenuPopupBookmark"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#8e000000"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:visibility="gone"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="?attr/cardBackground"
            android:layout_width="wrap_content"
            android:id="@+id/mainPopupActionViewNewsBookmark"
            android:layout_height="wrap_content"
            app:cardElevation="10dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationViewNewsBookmark"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                android:visibility="invisible"/>

            <LinearLayout
                android:id="@+id/swipeUpAnimGoneNewsBookmark"
                android:orientation="vertical"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#4ECBCBCB"
                    android:layout_gravity="center_vertical"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/clearAllNewsBookmark"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleColor="?attr/rippleColor"
                        app:mrl_rippleAlpha="0.2"
                        app:mrl_rippleDelayClick="false"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleRoundedCorners="10dp"
                        app:mrl_rippleDuration="100">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/backbutton"
                                android:rotation="90"
                                android:layout_margin="5dp"/>

                            <TextView
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:layout_gravity="center_vertical"
                                android:textColor="?attr/normalTextColor"
                                android:text="Clear All"/>
                        </LinearLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>