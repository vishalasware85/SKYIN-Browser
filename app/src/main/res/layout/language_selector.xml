<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/gateopenpic"
        android:visibility="visible"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:layout_marginRight="-80dp"
        android:layout_marginLeft="-80dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="bottom"
        android:src="@drawable/bottomlogin"
        android:scaleType="fitXY"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/instText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selNewsLang"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:id="@+id/langSelLayout"
            android:visibility="visible"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/englishBtnLang"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="English"
                android:textColor="@color/black"
                android:background="@drawable/lang_sel_circle"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/hindiBtnLang"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Hindi"
                android:textColor="@color/black"
                android:background="@drawable/lang_sel_circle"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:textAllCaps="false"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/themeSelLayout"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <Button
                android:layout_weight="1"
                android:id="@+id/systemDefaultLang"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="System\nDefault"
                android:textColor="@color/black"
                android:background="@drawable/lang_sel_circle"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/lightThemeLang"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Light"
                android:textColor="@color/black"
                android:background="@drawable/lang_sel_circle"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/darkThemeLang"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Dark"
                android:textColor="@color/black"
                android:background="@drawable/lang_sel_circle"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"/>
        </LinearLayout>

        <Button
            android:layout_weight="1"
            android:id="@+id/startBtnLang"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:text="NEXT"
            android:textColor="@color/white"
            android:background="@drawable/lang_sel_startbtn"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>