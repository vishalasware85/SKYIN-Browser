<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aboutAnimVisible"
    app:cardBackgroundColor="@color/transparent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/feedbackCardView">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/main_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/main_collapsing_toolbar"
            android:layout_width="match_parent"
            app:titleEnabled="false"
            android:layout_height="match_parent"
            app:layout_scrollFlags="exitUntilCollapsed|scroll|snap">

            <androidx.cardview.widget.CardView
                android:id="@+id/weatherCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/gradToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="?attr/feedbackToolbar">
                </LinearLayout>
                <ImageButton
                    android:id="@+id/aboutBack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/backbutton"
                    android:background="@color/transparent"/>
                <TextView
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Us"
                    android:gravity="start"
                    android:textSize="28sp"
                    android:textColor="#FFF"
                    android:fontFamily="@font/play_flair"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentInsetStart="0dp"
                android:contentInsetLeft="0dp"
                app:layout_collapseMode="pin"
                app:contentInsetLeft="0dp"
                android:layout_gravity="bottom"
                app:contentInsetStart="0dp"
                android:background="@color/transparent"
                android:backgroundTint="@color/transparent"
                android:backgroundTintMode="add">
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-110dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardElevation="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="50dp"
            android:rotation="-4"
            android:layout_marginTop="20dp"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginEnd="-22dp"
            android:layout_marginRight="-22dp"
            app:cardBackgroundColor="?attr/feedbackCardView"
            app:cardElevation="0dp"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/aboutCard2"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:id="@+id/abouttext3"
                            android:layout_margin="5dp"
                            android:textColor="?attr/normalTextColor"
                            android:layout_weight="1"
                            android:fontFamily="@font/play_flair"
                            android:text="App version :"/>

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:id="@+id/abouttext4"
                            android:layout_margin="5dp"
                            android:textColor="?attr/normalTextColor"
                            android:fontFamily="@font/play_flair"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/aboutCard3"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/transparent"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:id="@+id/abouttext5"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_margin="5dp"
                        android:layout_weight="0.9"
                        android:textColor="?attr/normalTextColor"
                        android:fontFamily="@font/play_flair"
                        android:text="Email us :"/>

                    <TextView
                        android:layout_gravity="end"
                        android:layout_weight="0.1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/abouttext6"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:textColor="?attr/normalTextColor"
                        android:fontFamily="@font/play_flair"
                        android:text="skyinbrowser@gmail.com"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/aboutCard4"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="7dp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_width="match_parent"
                            android:id="@+id/abouttext7"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_margin="5dp"
                            android:layout_weight="0.9"
                            android:textColor="?attr/normalTextColor"
                            android:fontFamily="@font/play_flair"
                            android:text="Workplace :"/>

                        <TextView
                            android:layout_gravity="end"
                            android:layout_weight="0.4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:gravity="center_vertical"
                            android:id="@+id/abouttext8"
                            android:layout_margin="5dp"
                            android:textColor="?attr/normalTextColor"
                            android:fontFamily="@font/play_flair"
                            android:text="@string/addressx"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/aboutCard1"
                    app:cardBackgroundColor="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="30dp"
                            android:layout_marginRight="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="S"
                                android:textColor="#ff6d00"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="K"
                                android:textColor="#ff6d00"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Y"
                                android:textColor="#ff6d00"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="!"
                                android:textColor="#00c853"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="N"
                                android:textColor="#00c853"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" G"
                                android:textColor="#00c853"
                                android:textSize="20sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R"
                                android:textColor="#00c853"
                                android:textSize="20sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="O"
                                android:textColor="#ff6d00"
                                android:textSize="20sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="U"
                                android:textColor="#ff6d00"
                                android:textSize="20sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="P"
                                android:textColor="#ff6d00"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
</androidx.cardview.widget.CardView>