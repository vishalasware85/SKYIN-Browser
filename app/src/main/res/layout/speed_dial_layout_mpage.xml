<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_marginRight="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/wikipediabt"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:layout_gravity="center_horizontal"
                    android:elevation="5dp"
                    android:background="@color/transparent"
                    android:src="@drawable/wikipedia" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wikipedia"
                    android:gravity="center_horizontal"
                    android:textColor="?attr/normalTextColor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/youtubebt"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:elevation="5dp"
                    android:background="@color/transparent"
                    android:src="@drawable/youtube"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="YouTube"
                    android:gravity="center_horizontal"
                    android:textColor="?attr/normalTextColor"/>
            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cricbuzzbt"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:elevation="5dp"
                    android:background="@color/transparent"
                    android:src="@drawable/cricbuzz"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cricbuzz"
                    android:gravity="center_horizontal"
                    android:textColor="?attr/normalTextColor"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/facebookbt"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:elevation="5dp"
                    android:background="@color/transparent"
                    android:src="@drawable/facebook"
                    tools:ignore="ContentDescription"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Facebook"
                    android:gravity="center_horizontal"
                    android:textColor="?attr/normalTextColor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/amazonbt"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:elevation="5dp"
                    android:background="@color/transparent"
                    android:src="@drawable/amazon"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amazon"
                    android:gravity="center_horizontal"
                    android:textColor="?attr/normalTextColor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/instagrambt"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:elevation="5dp"
                    android:background="@color/transparent"
                    android:src="@drawable/instagram"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Instagram"
                    android:gravity="center_horizontal"
                    android:textColor="?attr/normalTextColor"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">
        <com.skyinbrowser.CustomJavaFiles.NonScrollGridView
            android:layout_marginTop="20dp"
            android:layout_weight="0.9"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"
            android:horizontalSpacing="30dp"
            android:verticalSpacing="30dp"
            android:id="@+id/speedDialGridView"
            android:visibility="visible">
        </com.skyinbrowser.CustomJavaFiles.NonScrollGridView>

        <LinearLayout
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/speedDialBtnAdd"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/transparent"
                android:src="?attr/speedDialBtnAdd"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/site_more_button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:background="@color/transparent"
                android:src="?attr/speedDialBtnMore"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
