<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".weather.Weather_activity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/weather_location_card"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:visibility="visible"
        app:cardCornerRadius="10dp"
        android:id="@+id/citylocCard"
        app:cardBackgroundColor="?attr/cardBackground"
        android:layout_margin="10dp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@color/transparent"
            android:id="@+id/city_location_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/normalTextColor"
            android:textColorHint="?attr/normalTextColor"
            android:layout_weight="1"
            android:hint="Enter city name" />
        <requestFocus/>

        <TextView
            android:layout_gravity="center"
            android:id="@+id/go_btn"
            android:layout_width="wrap_content"
            android:textColor="?attr/normalTextColor"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="GO" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/viewApp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <LinearLayout
            android:layout_marginTop="40dp"
            android:id="@+id/mainCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/windowBackground"
            android:baselineAligned="false"
            android:visibility="visible"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/cityNameDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="city name"
                    android:fontFamily="sans-serif-black"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="?attr/normalTextColor"
                    android:textSize="20sp" />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/lastUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="?attr/normalTextColor"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:textSize="40sp"
                    android:id="@+id/todayIcon"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/normalTextColor"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp" />
                <TextView
                    android:visibility="invisible"
                    android:id="@+id/todayTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Â°C"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:layout_gravity="center_horizontal"
                    android:textColor="?attr/normalTextColor"
                    android:textSize="25sp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/todayDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No data"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="?attr/normalTextColor"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:visibility="invisible"
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="40dp"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/weathertext1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Wind"
                            android:fontFamily="sans-serif-black"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="?attr/normalTextColor"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/todayWind"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 m/s"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="?attr/normalTextColor"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pressure"
                            android:gravity="center"
                            android:id="@+id/weathertext2"
                            android:fontFamily="sans-serif-black"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textColor="?attr/normalTextColor"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/todayPressure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 hpa"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textColor="?attr/normalTextColor"
                            android:layout_weight="1"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Humidity"
                            android:gravity="center"
                            android:id="@+id/weathertext3"
                            android:textAllCaps="true"
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:textColor="?attr/normalTextColor"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/todayHumidity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0 %"
                            android:layout_marginTop="5dp"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textColor="?attr/normalTextColor"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:visibility="invisible"
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sunrise"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:id="@+id/weathertext4"
                            android:fontFamily="sans-serif-black"
                            android:gravity="center"
                            android:textColor="?attr/normalTextColor"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/todaySunrise"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:layout_marginTop="5dp"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="?attr/normalTextColor"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sunset"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:id="@+id/weathertext5"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-black"
                            android:textColor="?attr/normalTextColor"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/todaySunset"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textColor="?attr/normalTextColor"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/moreForcastBtn"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/bottom_sheet_open"
                android:scaleType="fitXY"
                android:layout_marginBottom="5dp"
                android:visibility="invisible"
                android:textColor="#000000"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="?attr/windowBackground"
            android:visibility="invisible"
            android:layout_marginTop="40dp">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/toolbar"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabMode="fixed"
                    app:tabGravity="fill"
                    app:tabSelectedTextColor="?attr/normalTextColor"
                    app:tabTextColor="?attr/darkTextColor"
                    app:tabRippleColor="?attr/rippleColor"
                    android:background="?attr/cardBackground"/>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/weathercard2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="?attr/cardBackground"
            android:layout_height="40dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/transparent"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp">
                <ImageView
                    android:id="@+id/closeweatherDetail"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/disabled_back"
                    android:scaleType="centerInside"
                    android:padding="4dp"/>

                <TextView
                    android:id="@+id/weathertext6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Explore Full Weather"
                    android:fontFamily="serif"
                    android:textColor="?attr/normalTextColor"
                    android:textSize="14sp"/>
                <ImageView
                    android:layout_gravity="end"
                    android:layout_width="70dp"
                    android:padding="5dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/three_dot_btn"
                    android:scaleType="centerInside"
                    android:id="@+id/exploreWeatherPopup"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:id="@+id/popupView"
            android:onClick="closePopup"
            app:cardBackgroundColor="#230F0F0F"
            android:layout_gravity="end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="0dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/weatherCard1"
                app:cardBackgroundColor="?attr/cardBackground"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_margin="20dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="Refresh"
                        android:id="@+id/reefreshBtn"
                        android:gravity="center"
                        android:textColor="?attr/normalTextColor"
                        android:fontFamily="sans-serif-light"
                        android:textSize="20sp"/>
                    <View
                        android:layout_width="150dp"
                        android:layout_height="2dp"
                        android:background="#78D8D8D8"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="Search"
                        android:id="@+id/searchBtn"
                        android:textColor="?attr/normalTextColor"
                        android:gravity="center"
                        android:fontFamily="sans-serif-light"
                        android:textSize="20sp"/>
                    <View
                        android:layout_width="150dp"
                        android:layout_height="2dp"
                        android:background="#78D8D8D8"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="Locate Me"
                        android:textColor="?attr/normalTextColor"
                        android:id="@+id/detectBtn"
                        android:gravity="center"
                        android:fontFamily="sans-serif-light"
                        android:textSize="20sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</LinearLayout>